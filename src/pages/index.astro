---
import Layout from '../layouts/Layout.astro';
import HeaderBackground from '../components/animatedBackground/HeaderBackground.astro';
import ListReferences from '../components/references/ListReferences.astro';
import Testimonials from '../components/Testimonials.astro';
import Services from '../components/Services.astro';
import Faq from '../components/Faq.astro';
import Cta from '../components/cta.astro';
---

<Layout title="Revontuli">
	<main>
		<HeaderBackground />
		<section class="value-proposition">
			<h2>Elever votre stratégie digitale au niveau supérieur et ne loupez plus jamais une opportunité de vendre en ligne avec votre site internet.</h2>
		</section>
		<ListReferences />
		<Services />
		<Testimonials />
		<Faq />
		<Cta />
	</main>
</Layout>

<style>
	h2 {
		font-size: 1.7rem;
	}
	@media screen and (min-width: 768px) {
		h2 {
			max-width: 800px;
			margin: 1rem auto 3rem auto;
			font-size: 2.5rem;
			text-align: center;
		}
	}
</style>
