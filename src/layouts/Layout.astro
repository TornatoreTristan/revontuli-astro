---
interface Props {
	title: string;
}
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>

		<!-- <script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
		</script> -->

		<link rel="sitemap" href="/sitemap-index.xml" />
		<!-- Google Tag Manager -->
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-RRYTGKHQ9H"
		></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-RRYTGKHQ9H");
		</script>
		<!-- End Google Tag Manager -->
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	@import url("https://use.typekit.net/lhb8tjv.css");
	body {
		font-family: "area-normal", sans-serif;
    font-weight: 400;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		color: #212A3D;
		overflow-x: hidden;
	}
	a {
		text-decoration: none;
	}
	ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	section {
		padding: 2rem 5%;
	}
	h1, h2, h3, h4, h5, h6 {
		margin: 0;
	}
	.btn {
		display: inline-block;
		padding: 0.5rem 1rem;
		border-radius: 0.25rem;
		font-weight: 700;
		background-color: #212A3D;
		color: #fff;
	}
	.link {
		display: inline-block;
		color: #212A3D;
		font-weight: 700;
		padding-bottom: 0.25rem;
		border-bottom: 2px solid #212A3D;
	}
	@media screen and (min-width: 768px) {
		section {
			padding: 2rem 14%;
		}
		.btn, .link {
			font-size: 0.8rem;
		}
	}
</style>
