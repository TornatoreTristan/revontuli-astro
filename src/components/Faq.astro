<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-list_item');

    faqItems.forEach(item => {
      item.addEventListener('click', () => {
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            const otherContent = otherItem.querySelector('.faq-list_item-content') as HTMLElement;
            if (otherContent) {
              otherContent.style.opacity = '0';
              otherContent.style.height = '0';
            }
          }
        });

        item.classList.toggle('active');
        const isActive = item.classList.contains('active');
        const content = item.querySelector('.faq-list_item-content') as HTMLElement;
        if (content) {
          if (isActive) {
            content.style.opacity = '1';
            content.style.height = 'auto';
          } else {
            content.style.opacity = '0';
            content.style.height = '0';
          }
        }
      });
    });
  });
</script>