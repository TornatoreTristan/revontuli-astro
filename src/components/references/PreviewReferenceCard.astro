---
const props = Astro.props
---

<div class="reference__preview-card preview-card" style=`background-image: url(${props.ref.data.image});`>
  <div class="tags">
    {props.ref.data.tags.map((tag: string) => {
      return <p class="tag">{tag}</p>
    })}
  </div>
  <div class="arrow">
    <img src="arrow.svg" alt="arrow" width="20">
  </div>
</div>

<style>
  .reference__preview-card {
    width: 100%;
    height: 500px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: red;
    border-radius: 0.25rem;
    flex: 0 0 auto;
    position: relative;
  }
  .tags {  
    margin: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    max-width: 70%;
  }
  .tag {
    color: #fff;
    display: inline-block;
    background-color: #ffffff6a;
    padding: 0.5rem 1rem;
    line-height: 1rem;
    text-transform: uppercase;
    font-size: 0.7rem;
    font-weight: 700;
    margin: 0;
    border-radius: 50px;
  }
  .arrow {
    position: absolute;
    top: 0;
    right: 0;
    margin: 1rem;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    background-color: #fff;
  }
  .arrow img {
    transform: rotate(225deg);
  }
  @media screen and (min-width: 768px){
    .reference__preview-card {
      width: calc(100% - 10px);
      height: 550px;
    }
  }
  @media screen and (min-width: 1200px) {
    .reference__preview-card {
      width: calc(50% - 10px);
      height: 550px;
    }
  }
</style>
